<div class="col-md-12">
  <div class="movie">
    <%= link_to("点评电影", new_movie_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>

        <td>影片</td>
        <td>剧情简介</td>
        <td>创建者</td>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "movie_item", :collection => @movies, :as => :movie %>
    </tbody>
  </table>
</div>
