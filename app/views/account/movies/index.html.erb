<div class="col-md=12">

  <h2 class="text-center"> 我评论过的电影 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 影片 </th>
        <th> 剧情简介 </th>
        <th> 影评数 </th>
        <th> 最后发表时间 </th>
      </tr>
    </thead>

    <tbody>
      <% @movies.each do |movie| %>
      <tr>
        <td> <%= link_to(movie.title, movie_path(movie)) %> </td>
        <td> <%= render_movie_description(movie) %> </td>
        <td> <%= movie.reviews.count %> </td>
        <td> <%= movie.updated_at %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
